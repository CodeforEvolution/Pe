
SubDir TOP rez Sources ;

SubDirHdrs $(OBJECTS_DIR) Sources ;

if $(OSPLAT) = X86 {
	C++FLAGS += -Wno-uninitialized -Wno-unused ;
} else {
	# include preprocess headers on PPC:
	C++FLAGS += -prefix $(PREFIX_FILE) ;
}

REZ = [ FDirName $(TOP) rez rez ] ;
Depends $(REZ) : rez ;

Application rez 
	:	rez_parser.y
		rez_scanner.l
		RState.cpp
		SymbolTable.cpp
		rez.cpp
		REval.cpp
		RElem.cpp
	:	be $(STDC++LIB) 
	;

MakeLocate rez : [ FDirName $(TOP) rez ] ;



